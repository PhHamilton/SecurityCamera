{
    "MQTT":
    {
        "client_id": "camera_handler",
        "address": "localhost",
        "port": 1883,
        "subscription_topics": "socket_handler/data",
        "publish_topic": "camera_handler/",
        "QOS": 2,
        "keep_alive": 60
    },
    "camera_parameters":
    {
        "flip_image": false,
        "file_type": "jpg",
        "image_name": "img_",
        "resolution":
        {
            "width": 1920,
            "height": 1080
        },
        "frame_rate": 1,
        "output_path": "./surveillence_images/",
        "n_stored_images": 10
    }
}
